@model CNPMNC.Models.KHACHHANG

@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/User.cshtml";
}

<div class="main">


    @using (Html.BeginForm("Dangnhap", "DNhap", FormMethod.Post, new { @action = "", @method = "POST", @class = "form", @id = "form-2", role = "form" }))
    {
        <h3 class="heading">Đăng nhập</h3>
        <p class="desc"> Mua hàng tại TFT Mobile Shop ❤️</p>

        <div class="spacer"></div>

        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            @Html.TextBoxFor(m => m.EMAIL, new { @id = "email", @name = "email", @type = "text", @placeholder = "VD: email@domain.com", @class = "form-control",  @required = true })
            @*<input id="email" name="email" type="text" placeholder="VD: email@domain.com" class="form-control">*@
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Mật khẩu</label>
            @Html.PasswordFor(m => m.MATKHAU, new { @id = "password", @name = "password", @type = "password", @placeholder = "Nhập mật khẩu", @class = "form-control", @required = true })

            <span class="form-message"></span>
        </div>
        <p style="color:red;text-align:center">
            @if (ViewBag.error != null)
            {@ViewBag.error}
        </p>
        <button type="submit" class="form-submit">Đăng nhập</button>
        
        <div class="form-group">
            <a href="@Url.Action("Dangky", "DNhap")" class="form-register">Đăng ký tài khoản</a>
        </div>

    }





</div>
