@model CNPMNC.Models.DONHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

@using (Html.BeginForm("Edit", "Donhang", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="home-product">
        <div class="row sm-gutter">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("DONHANGID", Model.DONHANGID)
            <!-- Product items -->
            <div class="home-product-title" style="height: 550px;">
                <div class="home-product-title-label">
                    <h2 class="home-product-title-label__heading">Chỉnh sửa thông tin đơn hàng</h2>
                </div>

                <div class="home-product-title-contents-sp" style="margin-top: 25px;">
                  
                    <div class="home-product-input-create-sp">
                        @Html.LabelFor(model => model.TENKH, htmlAttributes: new { @for = "input" })
                        @Html.EditorFor(model => model.TENKH, new { htmlAttributes = new { @class = "input-qlsp-create", @type = "text", @placeholder = "Nhập số lượng tồn...", @tabindex = "0", @required = true } })
                        @Html.ValidationMessageFor(model => model.TENKH, "", new { @class = "text-danger" })

                    </div>
                    <div class="home-product-input-create-sp">
                        @Html.LabelFor(model => model.DIACHI, htmlAttributes: new { @for = "input" })
                        @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "input-qlsp-create", @type = "text", @placeholder = "Nhập giá bán...", @tabindex = "0", @required = true } })
                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="home-product-title-contents-sp" style="margin-top: 25px;">
                    <div class="home-product-input-create-sp">
                        @Html.LabelFor(model => model.SDT, htmlAttributes: new { @for = "input" })
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "input-qlsp-create", @type = "text", @placeholder = "Nhập tên điện thoại...", @tabindex = "0", @required = true } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })

                    </div>
                    <div class="home-product-input-create-sp">
                        @Html.LabelFor(model => model.TRANGTHAIID, htmlAttributes: new { @for = "input" })
                        @{Html.RenderAction("SelectCateTT", "Donhang"); }

                        @Html.ValidationMessageFor(model => model.TRANGTHAIID, "", new { @class = "text-danger" })
                    </div>
                </div>
               
               
               


                <div class="home-product-title-contents-2" style="margin-top: 25px; justify-content:center;">
                    <input type="submit" value="Lưu" class="input-qldm-save" />
                    <div class="button-create-list2">
                        <a href="@Url.Action("Donhang", "Donhang")">
                            <button type="button" class="create-list">Quay về</button>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
}


