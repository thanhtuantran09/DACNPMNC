@model CNPMNC.Models.HANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}
@using (Html.BeginForm("Edit", "Hang", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("HANGID", Model.HANGID)
    @Html.Hidden("HINH", Model.HINH)
<div class="home-product">
    <div class="row sm-gutter">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Product items -->
        <div class="home-product-title" style="height: 550px;">
            <div class="home-product-title-label">
                <h2 class="home-product-title-label__heading">Thêm mới hãng</h2>
            </div>

            <div class="button-create-list">
                <!-- <a href="">
                    <button class="create-list">Tạo mới</button>
                </a> -->
            </div>
            <div class="home-product-title-contents" style="margin-top: 25px; display: flex; flex-direction:column;">
                @Html.LabelFor(model => model.TENHANG, htmlAttributes: new { @class = "control-label col-md-2 label-for" })
                @Html.EditorFor(model => model.TENHANG, new { htmlAttributes = new { @class = "input-qldm-create", type = "text", placeholder = "Nhập tên hãng tạo danh mục...", tabindex = "0" } })
                @Html.ValidationMessageFor(model => model.TENHANG, "", new { @class = "text-danger" })
            </div>
            <div class="home-product-title-contents" style="margin-top: 25px;">
                @Html.LabelFor(model => model.HINH, htmlAttributes: new { @class = "control-label col-md-2 label-for" })

                <div class="col-md-10">
                    <img src="@Url.Content(Model.HINH)" height="150px" width="150px" id="previewImg" />
                    <input class="btn" type="file" name="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg1'))" />
                    @Html.ValidationMessageFor(model => model.HINH, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="home-product-title-contents-2" style="margin-top: 25px;">
                <input type="submit" value="Lưu" class="input-qldm-save" />
                <div class="button-create-list2">
                    <a href="@Url.Action("Hang", "Hang")">
                        <button type="button" class="create-list">Quay về</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
}




